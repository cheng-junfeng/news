        android:text="Progress 6" />

    <Button
        android:id="@+id/progress7"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Progress 7" />

    <Button
        android:id="@+id/selfViewGroup"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义ViewGroup" />

    <Button
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:id="@+id/selftView"
        android:text="自定义View"
        android:layout_height="wrap_content" />
</LinearLayout>
