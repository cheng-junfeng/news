<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.news.ui.histogram.FhistogramView
        android:id="@+id/histogramView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_hv1"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:background="#ED7C63"
                    android:text="01"
                    android:textSize="12sp" />

                <com.news.ui.histogram.HistogramView
                    android:id="@+id/hv1"
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_hv2"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:background="#E3BD6B"
                    android:text="02"
                    android:textSize="12sp" />

                <com.news.ui.histogram.HistogramView
                    android:id="@+id/hv2"
                    android:layout_width="wrap_content"
                    android:background="#00000000"
                    android:layout_height="25dp" />

                <TextView
                    android:id="@+id/tv_hv2"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="¥ 200"
                    android:textColor="#ff000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_hv3"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:background="#68BADB"
                    android:text="03"
                    android:textSize="12sp" />

                <com.news.ui.histogram.HistogramView
                    android:id="@+id/hv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_hv4"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:background="#8D7AB0"
                    android:text="04"
                    android:textSize="12sp" />

                <com.news.ui.histogram.HistogramView
                    android:id="@+id/hv4"
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />

                <TextView
                    android:id="@+id/tv_hv4"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="¥ 200"
                    android:textColor="#ff000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_hv5"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:background="#4DC38B"
                    android:text="05"
                    android:textSize="12sp" />

                <com.news.ui.histogram.HistogramView
                    android:id="@+id/hv5"
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_hv6"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:background="#D3B893"
                    android:text="06"
                    android:textSize="12sp" />

                <com.news.ui.histogram.HistogramView
                    android:id="@+id/hv6"
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>